{% block modals %}
{% for post in posts  %}
        <div class="portfolio-modal modal fade" id="portfolioModal{{loop.index}}" tabindex="-1" aria-labelledby="portfolioModal{{loop.index}}" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button></div>
                    <div class="modal-body text-center pb-5">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <!-- Portfolio Modal - Title-->
                                    <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">{{post.title}}</h2>
                                    <!-- Icon Divider-->
                                    <div class="divider-custom">
                                        <div class="divider-custom-line"></div>
                                        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                        <div class="divider-custom-line"></div>
                                    </div>
                                    <!-- Portfolio Modal - Image-->
                                    <img class="img-fluid rounded mb-5" src="assets/img/{{post.img}}" alt="..." />
                                    <!-- Portfolio Modal - Text-->
                                    <p class="mb-4">{{post.chapo}}</p>
                                    <a class="btn btn-danger" href="delete/{{post.id}}/{{session.user.token}}" id="del-post">
                                        Supprimer
                                    </a>
                                    <a class="btn btn-secondary" href="edition/{{post.id}}">
                                        Modifier
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
      </div>
{% endfor %}
{% endblock %}
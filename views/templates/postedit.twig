{% for post in post %}
<div class="container">
    <form id="contactForm" method="post" action="/post-edit" enctype="multipart/form-data">

        {% if session.user.role == 1 %}
            <div class="container">
        <form id="contactForm" method="post" action="/creation" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleFormControlSelect1">Example select</label>
            <select class="form-control" id="exampleFormControlSelect1" name="author">
            {% for user in users %}
            <option value = "{{user.id}}" {% if post.users_id == user.id %} selected {% endif %}>{{user.pseudo}}</option>
            {% endfor %}
        </select>
        </div>
        {% endif %}
        <div class="form-floating mb-3">
            <input class="form-control" id="pseudo" type="text" placeholder="Titre de l'article" name ="title" value = "{{ post.title}}"/>
            <label for="title">Titre</label>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" id="chapo" type="text" placeholder="ChapÃ´" name ="chapo" value = "{{ post.chapo }}"/>
            <label for="chapo">Chapo</label>
        </div>
        <div class="form-floating mb-3">
            <textarea class="form-control" id="content" type="text" placeholder="Article..." name ="content" wrap = "hard-wrap">{{ post.content }}</textarea>
            <label for="content">Article</label>
        </div>
        <div class="form-floating mb-3">
            <input type="hidden" name="MAX_FILE_SIZE" value="2000000" />
            <input class="form-control-file" id="img" type="file" name ="image"  accept="image/png, image/jpeg ,image/webp ,image/jpg "/>
            <label for="img">Image d'illustration</label>
            <img class="img-fluid rounded mt-5" src= "/assets/img/{{ post.img }}"/>
        </div>
        <input type="hidden" name = "#token" value ="{{ session.user.token}}"/>
        <input type="hidden" name = "#id" value ="{{ post.id }}"/>
        <input type="hidden" name = "#img" value ="{{ post.img }}"/>
        <button class="btn btn-primary btn-xl mb-5" id="submitButton" type="submit">Modifier</button>
    </form>
</div>
{% endfor %}
